import java.util.Scanner;

public class Madlibs
{
    public static void main(String[] args)
    {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter your name: ");
        String name = input.nextLine();
    
        System.out.print("Enter the day of the month: ");
        int day = input.nextInt();
        input.nextLine();
        System.out.print("Enter the month as an integer: ");
        int month = input.nextInt();
        input.nextLine();
        System.out.print("Enter the year: ");
        int year = input.nextInt();
        System.out.println();
        System.out.println();

        input.nextLine();
        
        System.out.print("Enter the name of a person in the room: ");
        String person = input.nextLine();
        
        System.out.print("Enter a noun: ");
        String noun = input.nextLine();
        
        System.out.print("Enter an adjective: ");
        String adj = input.nextLine();
        
        System.out.print("Enter a verb in the past tense: ");
        String verb = input.nextLine();
        
        System.out.print("Enter a plural noun: ");
        String noun2 = input.nextLine();
        
        System.out.print("Enter a plural noun: ");
        String noun3 = input.nextLine();
        
        System.out.print("Enter a number: ");
        int number = input.nextInt();
        input.nextLine();
        
        System.out.print("Enter an adjective: ");
        String adj2 = input.nextLine();
        
        System.out.print("Enter an adjective: ");
        String adj3 = input.nextLine();
        
        System.out.print("Enter a noun: ");
        String noun4 = input.nextLine();
        
        System.out.print("Enter an exclamation: ");
        String excla = input.nextLine();
        
        System.out.print("Enter a noun: ");
        String noun5 = input.nextLine();
        
        System.out.print("Enter the name of another person in the room: ");
        String person2 = input.nextLine();
        
        System.out.print("Enter a noun: ");
        String noun6 = input.nextLine();
        
        System.out.print("Enter a noun: ");
        String noun7 = input.nextLine();
        
        System.out.print("Enter a number: ");
        int number2 = input.nextInt();
        input.nextLine();
        
        System.out.print("Enter a noun: ");
        String noun8 = input.nextLine();

        
        System.out.print("Enter a noun: ");
        String noun9 = input.nextLine();
        
        System.out.print("Enter a noun: ");
        String noun10 = input.nextLine();
        
        System.out.println();
        System.out.println();
        
